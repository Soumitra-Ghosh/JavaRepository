package com.app.java;


/*              1  2  3  4
 *            
 *            1 *             
 * 			  2 *  *       
 * 			  3 *  *  *
 * 			  4 *  *  *  *
 * 
 * 
 * */

public class StarPattart1_4 {

	public static void main(String[] args) {
		
		for(int i = 1; i<=4; i++)
		{
			for(int j = 1; j<=i; j++)
			{
				System.out.print("*"+" ");
			}
			System.out.println();
		}
	}

}
